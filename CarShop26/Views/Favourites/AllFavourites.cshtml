@model IEnumerable<AllCarsViewModel>

@{
    ViewData["Title"] = "My Favourites";
}

<h2 class="mb-4">My Favourites</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No favourites yet.</div>
}
else
{
    @await Html.PartialAsync("_AllAndFavouritesPartial", (Model, "Favourites"))
}