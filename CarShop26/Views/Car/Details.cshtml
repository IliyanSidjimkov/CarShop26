@model DetailsViewModel
@using System.Security.Claims

@{
    Layout = "_Layout";
    var isOwner = User.Identity?.IsAuthenticated == true
                  && User.FindFirst(ClaimTypes.NameIdentifier)?.Value == Model.OwnerId;
    var imageSrc = string.IsNullOrWhiteSpace(Model.ImageUrl)
        ? Url.Content("~/images/placeholder-car.png")
        : Model.ImageUrl;
}

<div class="container my-4">
    <div class="row g-4">
        <div class="col-md-5">
            <div class="card shadow-sm">
                <img src="@imageSrc"
                     class="card-img-top img-fluid"
                     alt="@($"{Model.Brand} {Model.Model}")"
                     onerror="this.onerror=null;this.src='@Url.Content("~/images/placeholder-car.png")';" />
            </div>
        </div>

        <div class="col-md-7">
            <h2 class="mb-1">@Model.Brand @Model.Model <small class="text-muted">(@Model.Year)</small></h2>
            <h4 class="text-success mb-3">@Model.Price.ToString("N2") €</h4>

            <dl class="row">
                <dt class="col-sm-4">Mileage</dt>
                <dd class="col-sm-8">@Model.Mileage</dd>

                <dt class="col-sm-4">Fuel Type</dt>
                <dd class="col-sm-8">@Model.FuelType</dd>

                <dt class="col-sm-4">Gearbox</dt>
                <dd class="col-sm-8">@Model.GearboxType</dd>

                <dt class="col-sm-4">City</dt>
                <dd class="col-sm-8">@Model.City</dd>

                <dt class="col-sm-4">Category</dt>
                <dd class="col-sm-8">@Model.Category</dd>

                <dt class="col-sm-4">Owner</dt>
                <dd class="col-sm-8">@Model.OwnerName</dd>


                <dt class="col-sm-4">Published on</dt>
                <dd class="col-sm-8">@Model.CreatedOn</dd>
            </dl>

            <div class="mt-3">
                <a href="@(ViewBag.ReturnUrl ?? Url.Action("AllCars", "Car"))"
                   class="btn btn-secondary">
                    Back to list
                </a>



                @if (isOwner)
                {
                    <a asp-controller="Car" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning ms-2">Edit</a>

                    <form asp-controller="Car" asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline ms-2" onsubmit="return confirm('Are you sure you want to delete this car?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>